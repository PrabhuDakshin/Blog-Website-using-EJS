<%- include("partials/header") -%>

<h1>Home</h1>
<p> <%= homeContent %> </p>


<% posts.forEach(function(x) { %>
  <h1>   <%= x.title[0].toUpperCase() + x.title.slice(1) %>   </h1>
<%  let body = x.content.substring(0,100); %>
<% body = body + "..."; %>
  <p> <%= body %>
    <a href="/posts/<%=x.title%>">Read more</a>
  </p>
<% }); %>

