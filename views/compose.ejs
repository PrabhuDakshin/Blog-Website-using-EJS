<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <label for="">Title</label>
<% if(title === "null"){ %>
  <input class = "form-control" type="text" name = "title">
  <label for="">Post</label>
  <textarea class="form-control" name="postBody" rows="6"></textarea><br />
<% } else { %>
  <input class = "form-control" type="text" name = "title" placeholder= "Use different Title">
  <label for="">Post</label>
  <textarea class="form-control" name="postBody" rows="6" ><%=content%></textarea><br />

<% }%>

  <button class="btn btn-primary" type="submit" name="button"> Publish</button>
</form>

<%- include("partials/footer") -%>
